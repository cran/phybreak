citHeader("To cite phybreak in publications use:")

citEntry(entry = "Article",
  title = "Simultaneous inference of phylogenetic and transmission trees in infectious disease outbreaks",
  author = personList(as.person("Don Klinkenberg"), as.person("Jantien A. Backer"), as.person("Xavier Didelot"),
            as.person("Caroline Colijn"), as.person("Jacco Wallinga")),
  journal = "PLOS Computational Biology",
  volume = 13,
  number = 5,
  year = 2017,
  number = "e1005495",
  doi = "10.1371/journal.pcbi.1005495",

  textVersion = paste("Don Klinkenberg, Jantien A. Backer, Xavier Didelot, Caroline Colijn, Jacco Wallinga (2017).",
    "Simultaneous inference of phylogenetic and transmission trees in infectious disease outbreaks.",
    "PLOS Computational Biology 13(5): e1005495. doi: http://dx.doi.org/10.1371/journal.pcbi.1005495")
)